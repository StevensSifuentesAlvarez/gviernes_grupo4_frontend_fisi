<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/VectorLogin"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/vector_login"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/Balls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/balls" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="90dp"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"
        android:textSize="45sp"
        tools:text="Login" />

    <ImageView
        android:id="@+id/ImgMainLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Balls"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/illustration" />

    <LinearLayout
        android:id="@+id/inputs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ImgMainLogin"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/EmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/user_login"
            android:ems="10"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/lock_password"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonEstetoscopio"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_below="@id/inputs"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Estetoscopio"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginStart="41dp"
            android:layout_marginBottom="37dp"
            app:srcCompat="@drawable/estetoscopio" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="207dp"
            android:layout_height="50sp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="38dp"
            android:backgroundTint="#1B6A85"
            app:cornerRadius="15in"
            tools:text="Iniciar Sesión" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonEstetoscopio"
        android:layout_alignParentRight="true"
        android:text="¿No tienes una cuenta? Registrate" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:padding="15dp"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:layout_alignParentRight="true"
        android:padding="20dp"
        app:srcCompat="@drawable/help" />
</RelativeLayout>