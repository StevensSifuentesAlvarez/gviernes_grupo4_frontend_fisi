<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleAppointment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/vector_login" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/avatar_" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="55dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#00FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/back"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="260dp"
                    android:layout_height="115dp"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="8dp"
                    android:text="Programar Cita"
                    android:textColor="#FFFFFF"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="80dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hola,"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cody Fisher"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Especialidad"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView2"
                android:layout_width="380dp"
                android:layout_height="91dp"
                android:layout_marginStart="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip34"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/medicina"
                            android:padding="20dp"
                            android:text="Medicina" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip23"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/odontologia"
                            android:text="Odontología" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip19"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/psicologia"
                            android:text="Psicología" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip24"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/cirugia"
                            android:text="Cirugía"
                            tools:ignore="MissingConstraints" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip25"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/neurologia"
                            android:text="Neurología" />
                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Fecha"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerFecha"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:minHeight="48dp"
                android:padding="5dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="92dp"
                        android:padding="5dp"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip13"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="17 Lun"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip14"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="18 Mar"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:ignore="MissingConstraints" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip5"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:text="19 Mier"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip4"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:padding="20dp"
                            android:text="20 Jue"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip7"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:text="21 Vie"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip9"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:text="22 Sab"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:drawableRight="@drawable/time"
                android:text="Hora"
                android:textColor="#000000"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="685dp"
                        android:layout_height="207dp"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip10"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 9:00 AM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip11"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 9:20 AM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip12"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 9:40 AM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip20"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00 AM" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip21"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:20 AM" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip22"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:40 AM" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip26"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11:00 AM" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip27"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11:20 AM" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip28"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11:40 AM" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip29"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:00 PM" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip30"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:20 PM" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip31"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:40 PM" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip32"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 1:00 PM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip33"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 1:20 PM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip35"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 1:40 PM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip36"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 2:00 PM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip37"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 2:20 PM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip38"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 2:40 PM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip39"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 3:00 PM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip40"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 3:20 PM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip41"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 3:40 PM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip42"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 4:00 PM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip43"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 4:20 PM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip44"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 4:40 PM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip45"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 5:00 PM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip46"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 5:20 PM " />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip47"
                            style="@style/ChipStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 5:40 PM " />
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="96dp"
                    android:layout_height="92dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/estetoscopio" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginLeft="50dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="175dp"
                        android:layout_height="49dp"
                        android:background="@drawable/bordes_redondos"
                        android:text="Registrar cita"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:text="Mis citas"
                        android:textColor="#1B6A85"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/nav_alone" />

    <LinearLayout
        android:id="@+id/lyOptions"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/iconHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/menu_home" />

        <ImageButton
            android:id="@+id/iconSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/search" />

        <ImageButton
            android:id="@+id/iconPayments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/payments" />

        <ImageButton
            android:id="@+id/iconProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/profile" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>